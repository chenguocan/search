page {
  background: #fafafa;
  width: 100%;
  height: 100%;
}
.index-page {
  margin: 0 20rpx 0 20rpx;
}
.scrollList {
  background-color: #f2f2f2;
  -webkit-border-radius: 15rpx;
          border-radius: 15rpx;
  margin-top: 20rpx;
  -webkit-box-shadow: 1px 1px 4px #ebebeb;
          box-shadow: 1px 1px 4px #ebebeb;
}
.scrollList .scroll-item {
  width: 325rpx;
  height: 350rpx;
  margin: 10rpx 0 10rpx 20rpx;
  background-color: white;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  padding: 10rpx;
  -webkit-box-shadow: 1px 1px 4px #ebebeb;
          box-shadow: 1px 1px 4px #ebebeb;
}
.scrollList .scroll-item .search-detail {
  width: 100%;
  height: 100%;
}
.scrollList .scroll-item .search-detail .search-img {
  height: 250rpx;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
}
.scrollList .scroll-item .search-detail .search-img .image {
  width: 100%;
  height: 250rpx;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
}
.scrollList .scroll-item .search-detail .search-name {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

